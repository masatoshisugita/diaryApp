<div class="main">
  <h2 class="mt-3"><%= @current_user.name %>さんの体重</h2>
  <div class="form">
  <%= form_for @diary do |f| %>
    <%= f.label :weight %>
    <%= f.text_field :weight %>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
    <%= f.submit '登録' %>
  <% end %>
</div>

<table>
  <tr>
    <th>日付</th>
    <th>体重</th>
    <th width="300">一言</th>
    <th>削除</th>
  </tr>
  <% @diaries.each do |diary| %>
    <tr>
      <th><%= diary.created_at.strftime('%Y/%m/%d') %></th>
      <th><%= diary.weight %></th>
      <th width="200"><%= diary.comment %></th>
      <th><%= link_to '削除',diary,method: :delete,class: 'btn btn-danger' %></th>
    </tr>
  <% end %>
</table>




<canvas id="myChart"></canvas>
<script>draw_graph();</script>
</div>
